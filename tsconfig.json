{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "./public/assets/js",
    "baseUrl": ".",
    "paths": {
      "@/*": ["public/assets/ts/*"]
    }
  },
  "include": ["public/assets/ts/**/*"]
}
