{
    "name": "alessandrodesign/relatorio-professor-a",
    "description": "Geração e controle de relatórios para professores",
    "license": "MIT",
    "type": "project",
    "homepage": "https://rp.norte.dev.br/",
    "support": {
        "forum": "https://norte.dev.br",
        "source": "https://github.com/alessandrodesign/relatorio-professor-a",
        "slack": "https://nortedevbr.slack.com"
    },
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^v4.6.0",
        "codeigniter4/translations": "^4.6",
        "firebase/php-jwt": "^6.11"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^10.5.16"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit"
    },
    "prefer-stable": true
}
